//页面等比缩放
//window.addEventListener("resize",setRemSizeCon,false);
window.onresize = throttle(setRemSize, 300 );
function throttle(fn,interval){
	var _self=fn,timer,
		firstTime=true;
	
	return function(){
		var args=arguments;
		var _me=this;
		
		if(firstTime){
			_self.apply(_me,args);
			return firstTime=false;
		}
		if(timer){
			return false;
		}
		timer=setTimeout(function(){
			clearTimeout(timer);
			timer=null;
			_self.apply(_me,args);
		},interval||300)
	}
}
function setRemSize(){
	var clientWidth_get=document.documentElement.clientWidth;
	if(clientWidth_get>=1346){
		var _clientWidth=clientWidth_get/19.2+"px";
			document.documentElement.style.fontSize=_clientWidth;
	}else{
		document.documentElement.style.fontSize="70px";
	}
}
setRemSize();